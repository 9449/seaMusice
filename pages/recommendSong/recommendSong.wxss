/* 头部区域 */
.header {
  position: relative;
}
.header image {
  width: 100%;
  height: 300rpx;
}
.header .date {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
}
.date .day {
  font-size: 38rpx;
}

/* 内容区域 */
.content {
  padding: 0 20rpx;
}
.content .title {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
}
.content .songs .songItem {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.songItem .songInfo {
  display: flex;
  align-items: center;
}
.songItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.songInfo .songName {
  font-size: 28rpx;
}
.songInfo .js {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
