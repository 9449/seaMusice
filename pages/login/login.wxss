.loginContainer .login {
  width: 80%;
  height: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  margin: 200rpx auto;
  border-radius: 8rpx;
  border: 2rpx solid #e5e5e5;
  box-sizing: border-box;
}

.title {
  width: 600rpx;
  height: 60rpx;
  background-color: #2D2D2D;
  color: #fff;
  line-height: 60rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
  margin-bottom: 70rpx;
}

.phone {
  height: 60rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 50rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
}
.common {
  width: 80%;
  margin: 30rpx auto;
}
.code {
  display: flex;
  align-items: center;
}

.code input{
  box-sizing: border-box;
  height: 60rpx;
  width: 60%;
  border: 2rpx solid #E5E5E5;
  border-radius: 50rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
}

.code view{
  margin-left: 10rpx;
  flex: 1;
  height: 60rpx;
  background-color: #FF3A3A;
  color: #fff;
  border-radius: 50rpx;
  text-align: center;
  line-height: 60rpx;
}

.submit {
  margin-top: 50rpx;
  width: 80%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  background-color: #FF3A3A;
  border-radius: 50rpx;
  color: #fff;
}