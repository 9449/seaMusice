/* 轮播图区域 */
.banners {
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 导航区域 */
.navs {
  display: flex;
}

.navs .nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.nav-item .iconfont {
  margin: 20rpx 0;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #FF2A11;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 40rpx;
}
.nav-item text {
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer {
  padding: 0 20rpx;
  margin-top: 20rpx;
}

/* 推荐歌曲-内容区域 */
.recommendContainer .body {
  margin-top: 30rpx;
  height: 300rpx;
  display: flex;
}

.recommend {
  margin-right: 20rpx;
  width: 200rpx;
}

.recommend image{
  width: 200rpx;
  height: 200rpx;
}

.recommend text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行榜 */
.topList {
  padding: 20rpx;
}
.topListSwiper {
  height: 400rpx;
}
.swiperItem {
  width: 96%;
  background-color: #FBFBFB;
} 

.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem {
  display: flex;
}
.musicItem image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}